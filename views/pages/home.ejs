<%- include("../template/head", {title: "Home"}) -%>
    <div class="jumbotron">
        <h1 class="text-center"><span class="fa fa-fire"></span> Hot Restaurant</h1>
        <hr>
        <% if (tables > 0) { %>
            <% if (tables > 1) { %>
                <h2 id="text-welcome" class="text-center">We only have <%=tables%> tables! Book your seat before they all are gone!</h2>
            <% } else { %>
                <h2 id="text-welcome" class="text-center">We only have <%=tables%> table! Book your seat before they all are gone!</h2>
            <% } %>
        <% } else { %>
            <h2 id="text-welcome" class="text-center">All tables are occupied! Join the waitlist</h2>
        <% } %>
        <br>
        <div class="text-center">
            <a href="/tables"><button class="btn btn-lg btn-primary"><span class="fa fa-list-alt"></span> View Tables</button></a>
            <a href="/reserve"><button class="btn btn-lg btn-danger"><span class="fa fa-credit-card"></span> Make Reservation</button></a>
        </div>
    </div>
<%- include("../template/footer") -%>